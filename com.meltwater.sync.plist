        <integer>10</integer>
        <key>Minute</key>
        <integer>0</integer>
    </dict>
    -->

    <key>StandardOutPath</key>
    <string>/Users/admin/Desktop/meltwater-automation/cron_output.log</string>

    <key>StandardErrorPath</key>
    <string>/Users/admin/Desktop/meltwater-automation/cron_error.log</string>

    <key>RunAtLoad</key>
    <false/>

    <key>KeepAlive</key>
